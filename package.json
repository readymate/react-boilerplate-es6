{
  "name": "readymate-boilerplate-es6",
  "version": "0.0.1",
  "description": "A ES6 starter project",
  "main": "index.js",
  "author": "Egor Kirpichev",
  "license": "MIT",
  "scripts": {
    "build": "NODE_ENV=production webpack",
    "deploy": "yarn build && now",
    "format": "prettier --write \"{src,test}/**/*.{js,jsx,json}\" \"*.config.{js,json}\" \".babelrc\" \".prettierrc\" \".eslintrc\"",
    "lint": "eslint src && prettier --list-different \"{src,test}/**/*.{js,jsx}\"",
    "prebuild": "rm -rf dist && yarn format && yarn lint",
    "start": "nodemon --watch webpack.config.js --exec \"webpack-dev-server --mode development\" --host localhost --port 8080",
    "test": "export NODE_ENV=test || SET \"NODE_ENV=test\" && jest"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "polished": "^3.0.3",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "styled-components": "^4.1.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.5.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-styled-components": "^1.10.0",
    "copy-webpack-plugin": "^5.0.1",
    "dotenv": "^6.2.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "eslint": "^5.10.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.5.0",
    "jest-enzyme": "^7.0.1",
    "jest-styled-components": "^6.3.1",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "react-hot-loader": "^4.6.0",
    "react-test-renderer": "^16.7.0",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  }
}
